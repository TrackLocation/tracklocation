<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    android:key="pref_syncConnectionType"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
	<PreferenceCategory 
        android:title="Log"
        android:key="pref_key_log_settings">
	    <CheckBoxPreference
	        android:key="pref_log_enable"
	        android:title="Enable Log"	        
	        android:defaultValue="false" 
	        android:selectable="true"/>
	    <ListPreference
	        android:dependency="pref_log_enable"
	        android:key="pref_log_levels"
	        android:title="Log Level"
	        android:dialogTitle="@string/title_log_level"
	        android:entries="@array/log_level_entries"
	        android:entryValues="@array/log_level_values"
	        android:defaultValue="string/default" />
    </PreferenceCategory>   
    <PreferenceCategory 
        android:title="@string/settings_Map"
        android:key="pref_key_map_settings">
	    <CheckBoxPreference
	        android:key="pref_map_lock"
	        android:title="Lock map 'North' on contact move"	        
	        android:defaultValue="false" 
	        android:selectable="true"/>	   
    </PreferenceCategory>   
