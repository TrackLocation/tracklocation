<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item
        android:bottom="1px"
        android:left="10px"
        android:right="10px"
        android:top="5px">
        <shape android:shape="rectangle" >
            <solid android:color="#ccc" />
            <corners android:radius="3dp" />
        </shape>
    </item>

    <!-- White Top color -->

    <item
        android:bottom="5px"
        android:left="10px"
        android:right="10px"
        android:top="1px">
        <shape android:shape="rectangle" >
            <solid android:color="#FFFFFF" />

            <corners android:radius="2dp" />
        </shape>
    </item>
    <item
        android:bottom="4px"
        android:left="0px"
        android:right="2px"
        android:top="0px">
        <shape android:shape="rectangle" >
            <corners android:radius="2dp" />

            <stroke
                android:width="2dp"
                android:color="#DBDBDB" />
        </shape>
    </item>
</layer-list>