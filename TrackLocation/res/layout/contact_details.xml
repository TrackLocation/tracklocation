<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:weightSum="100" >

       <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="100" >

            <EditText
                android:id="@+id/fld_nick"
                style="@style/textbox"
                android:layout_width="0dp"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_weight="80"
                android:height="16dp"
                android:inputType="text"
                android:typeface="normal" >

                <requestFocus />
            </EditText>

            <ImageView
                android:id="@+id/img_contact"
                android:layout_width="32dp"
                android:layout_height="64dp"
                android:layout_weight="10.44"
                android:src="@android:drawable/ic_menu_my_calendar" />

      

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="100" >

            <EditText
                android:id="@+id/fld_first_name"
                style="@style/textbox"
                android:layout_width="0dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_weight="70"
                android:hint="@string/lbl_first_name"
                android:inputType="textEmailAddress"
                android:theme="@style/textbox" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="100" >

            <EditText
                android:id="@+id/fld_last_name"
                style="@style/textbox"
                android:layout_width="0dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_weight="70"
                android:hint="@string/lbl_last_name"
                android:inputType="textEmailAddress"
                android:theme="@style/textbox" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="100" >

            <EditText
                android:id="@+id/fld_email"
                style="@style/textbox"
                android:layout_width="0dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_weight="70"
                android:enabled="false"
                android:hint="@string/lbl_email"
                android:inputType="textEmailAddress"
                android:theme="@style/textbox" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="100" >

            <EditText
                android:id="@+id/fld_devicename"
                style="@style/textbox"
                android:layout_width="0dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_weight="70"
                android:hint="@string/lbl_devicename"
                android:inputType="text" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="100" >

            <TextView
                android:id="@+id/lbl_devicetype"
                style="@style/textbox"
                android:layout_width="0dp"
                android:layout_marginLeft="20dp"
                android:layout_weight="30"
                android:text="@string/lbl_devicetype" />

            <Spinner
                android:id="@+id/devicetype"
                style="@style/textbox"
                android:layout_width="0dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="20dp"
                android:layout_weight="70"
                 />
        </LinearLayout>

        <Button
            android:id="@+id/button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Update" 
          	android:onClick="submitUpdateResult" 
             />

    </LinearLayout>

</RelativeLayout>