<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:openDrawer="start">
           
	<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	    xmlns:tools="http://schemas.android.com/tools"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:id="@+id/main_pane"
	    tools:context=".MapActivity" >
	
	    <fragment
	        android:id="@+id/map"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:layout_above="@+id/layoutAccountMenu"
	        class="com.doat.tracklocation.MyMapFragment"
	        android:scrollbars="vertical" />
	    	
	    <LinearLayout
	        android:id="@+id/layoutAccountMenu"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_alignParentBottom="true"
	        android:layout_alignParentTop="false"
	        android:layout_centerHorizontal="true"
	        android:background="@color/White"
	        android:orientation="vertical" >
	
	        <LinearLayout
	            android:id="@+id/map_popup_first"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content" >
	
	            <LinearLayout
	                android:layout_width="0dp"
	                android:layout_height="wrap_content"
	                android:layout_marginBottom="12dp"
	                android:layout_marginLeft="12dp"
	                android:layout_marginRight="8dp"
	                android:layout_marginTop="12dp"
	                android:layout_weight="80"
	                android:orientation="vertical" >
	
	                <TextView
	                    android:id="@+id/title_text"
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:layout_marginBottom="2dp"
	                    android:textColor="@color/Black"
	                    android:textStyle="bold" />
	
	                <TextView
	                    android:id="@+id/info_preview"
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:layout_marginBottom="2dp"
	                    android:textColor="@color/Black" />
	            </LinearLayout>
	
	            <LinearLayout
	                android:layout_width="0dp"
	                android:layout_height="wrap_content"
	                android:layout_marginBottom="12dp"
	                android:layout_marginLeft="12dp"
	                android:layout_marginRight="8dp"
	                android:layout_marginTop="12dp"
	                android:layout_weight="20"
	                android:orientation="vertical" >
	
	                <ImageButton
	                    android:id="@+id/nav_btn"
	                    style="@style/flat_round_button"
	                    android:layout_gravity="center_vertical|center_horizontal"
	                    android:layout_margin="@dimen/activity_horizontal_margin"
	                    android:layout_weight="20"
	                    android:elevation="6dp"
	                    android:src="@drawable/ic_directions_black_24dp" />
	            </LinearLayout>
	        </LinearLayout>
	
	        <LinearLayout
	            android:id="@+id/map_popup_second"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:weightSum="100" >
	
	            <Button
	                android:id="@+id/call_btn"
	                style="@style/general_button"
	                android:layout_width="0dp"
	                android:layout_height="fill_parent"
	                android:layout_weight="20"
	                android:minHeight="48dip"
	                android:text="Call" />
	
	            <Button
	                android:id="@+id/message_btn"
	                style="@style/general_button"
	                android:layout_width="0dp"
	                android:layout_height="fill_parent"
	                android:layout_weight="60"
	                android:minHeight="48dip"
	                android:text="Send message" />
	
	            <Button
	                android:id="@+id/ring_btn"
	                style="@style/general_button"
	                android:layout_width="0dp"
	                android:layout_height="fill_parent"
	                android:layout_weight="20"
	                android:minHeight="48dip"
	                android:text="Ring..." />
	        </LinearLayout>
	    </LinearLayout>
	
	    <ImageButton
	        android:id="@+id/btn_my_location"
	        style="@style/flat_round_button"
	        android:layout_alignParentBottom="false"
	        android:layout_alignParentLeft="true"
	        android:layout_centerHorizontal="false"
	        android:layout_centerInParent="false"
	        android:layout_centerVertical="true"
	        android:layout_gravity="center_vertical|center_horizontal"
	        android:layout_margin="@dimen/activity_horizontal_margin"
	        android:alpha="0.6"
	        android:src="@drawable/ic_my_location_black_24dp"
	        android:visibility="invisible" />
	
	    <include
	        android:id="@+id/include_contacts_list"
	        android:layout_width="80dp"
	        android:layout_height="fill_parent"
	        android:layout_alignParentRight="true"
	        android:layout_centerVertical="true"
	        android:layout_gravity="left|center"
	        android:layout_marginTop="20dp"
	        layout="@layout/map_contacts_fragment" />
	
	    <ListView
	        android:id="@+id/favorites_list"
	        android:layout_width="80dp"
	        android:layout_height="fill_parent"
	        android:layout_alignParentRight="true"
	        android:layout_centerHorizontal="true"
	        android:layout_gravity="center_horizontal"
	        android:divider="@android:color/transparent"
        	android:dividerHeight="0dp"
	        android:layout_marginTop="70dp"
	        android:background="@android:color/transparent" />

		<ImageButton
			android:id="@+id/menu_view_btn"
			style="@style/general_button"
			android:layout_width="45dp"
			android:layout_height="45dp"
			android:alpha="0.8"
			android:src="@drawable/ic_list_black_24dp"
            android:layout_alignTop="@+id/include_contacts_list"
            android:layout_alignLeft="@+id/btn_my_location"
            android:layout_alignParentEnd="false"
            android:layout_alignParentStart="false" />

        <LinearLayout
            android:id="@+id/contact_quick_info"
            android:layout_width="200dp"
            android:layout_height="?android:attr/listPreferredItemHeightSmall"
            android:alpha="0.8"
            android:background="@drawable/contact_quick_info_shape"
            android:orientation="horizontal"
            android:layout_alignParentEnd="false"
            android:layout_toStartOf="@id/include_contacts_list"
            android:layoutMode="opticalBounds">

            <CheckBox
                android:id="@+id/qi_favbutton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="5sp"
                android:button="@android:drawable/btn_star"
                android:focusable="false"
                android:layout_marginRight="5dp"
                android:gravity="center_vertical|center_horizontal" />

            <TextView
                android:id="@+id/qi_contact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:ellipsize="marquee"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@+id/label"
                android:layout_gravity ="center"
                android:textSize="25sp"
                android:gravity="center_vertical|center_horizontal">
            </TextView>
        </LinearLayout>	
	</RelativeLayout>
	<ListView
        android:id="@+id/left_drawer"
        android:layout_width="240dp"
        android:layout_height="match_parent" 
        android:layout_gravity="start"
        android:choiceMode="singleChoice"    	    	
    	android:background="#ffeeeeee"/>
</android.support.v4.widget.DrawerLayout>