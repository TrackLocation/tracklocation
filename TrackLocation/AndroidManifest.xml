<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.doat.tracklocation"
    android:versionCode="7"
    android:versionName="0.0.7" >

    <uses-sdk
        android:maxSdkVersion="21"
        android:minSdkVersion="16"
        android:targetSdkVersion="21" />
    <!--
         permission so the Android application can send the registration ID to 
    	the 3rd party server
    -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.RECEIVE_SMS" />
    <uses-permission android:name="android.permission.SEND_SMS" />
    <uses-permission android:name="android.permission.READ_SMS" />
    <uses-permission android:name="android.permission.WRITE_SMS" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <!--
          permission as GCM requires a Google account (necessary only if if the 
    	device is running a version lower than Android 4.0.4)
    -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.AUTHENTICATE_ACCOUNTS" >
    </uses-permission>
    <!--
         permission so the application can keep the processor from sleeping 
    	when a message is received. Optionalâ€”use only if the app wants to keep 
    	the device from sleeping.
    -->
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <!-- permission so the Android application can register and receive messages -->
    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />
    <uses-permission android:name="com.google.android.providers.gsf.permission.READ_GSERVICES" />

    <permission
        android:name="com.doat.tracklocation.permission.MAPS_RECEIVE"
        android:protectionLevel="signature" />
    <permission
        android:name="com.doat.tracklocation.permission.C2D_MESSAGE"
        android:protectionLevel="signature" />

    <uses-permission android:name="com.doat.tracklocation.permission.C2D_MESSAGE" />
    <!-- permission so the Android application can write to SDCARD -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <!--
    http://developer.android.com/guide/topics/location/strategies.html
    Note: If you are using both NETWORK_PROVIDER and GPS_PROVIDER, then you need 
    to request only the ACCESS_FINE_LOCATION permission, because it includes permission 
    for both providers. (Permission for ACCESS_COARSE_LOCATION includes permission only for NETWORK_PROVIDER.)
    -->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_UPDATES" />
	<uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
		
    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" 
        android:icon="@drawable/main_icon_96">
        
       <!-- android:name="com.google.android.gms.gcm.GcmReceiver" -->
        <receiver
            android:name="com.doat.tracklocation.service.GcmBroadcastReceiver"
            android:exported="true"
            android:permission="com.google.android.c2dm.permission.SEND" >
            <intent-filter>
                <action android:name="com.google.android.c2dm.intent.RECEIVE" />
                <action android:name="android.intent.action.BOOT_COMPLETED" />
                <category android:name="com.doat.tracklocation" />
            </intent-filter>
        </receiver>
        <receiver 
            android:name="com.doat.tracklocation.service.SMSReceiver" 
            android:exported="true"
            android:permission="android.permission.BROADCAST_SMS" >
            <intent-filter>
                <action android:name="android.provider.Telephony.SMS_RECEIVED" />
                <action android:name="android.intent.action.BOOT_COMPLETED" />
                </intent-filter>
        </receiver>
        <!--
		<receiver android:name=".service.TrackingAutostarter">
	        <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
                <category android:name="android.intent.category.HOME" />
	        </intent-filter>
		</receiver>
        -->
        
        <service
            android:name="com.doat.tracklocation.service.GcmIntentService"
            android:exported="false" >
            <intent-filter>
                <action android:name="com.google.android.c2dm.intent.RECEIVE" />
            </intent-filter>
        </service>
        
        <service android:name="com.doat.tracklocation.service.TrackLocationService" >
        </service>
        <!--  
        <service android:name=".service.TrackingAutostarter" >
        </service>
        -->
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:launchMode="standard"           
            android:screenOrientation="unspecified">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ContactListActivity"
            android:label="@string/title_activity_contact_list"            
            android:screenOrientation="user" 
            android:configChanges="keyboardHidden|orientation|screenSize">            
        </activity>
        <activity
            android:name=".TrackingListActivity"
            android:label="@string/title_activity_tracking_list"
            android:screenOrientation="unspecified"
            android:configChanges="keyboardHidden|orientation|screenSize" >
        </activity>
        <activity
            android:name=".LocationSharingListActivity"
            android:label="@string/title_activity_location_sharing_list"
            android:screenOrientation="unspecified" 
            android:configChanges="keyboardHidden|orientation|screenSize">
        </activity>
        <activity
            android:name=".MapActivity"
            android:label="@string/title_activity_googlemap"
            android:screenOrientation="unspecified" 
            android:configChanges="keyboardHidden|orientation|screenSize">
        </activity>
        <activity
            android:name=".JoinContactListActivity"
            android:label="@string/title_activity_join_contact_list"
            android:screenOrientation="unspecified"
            android:windowSoftInputMode="stateHidden"
            android:configChanges="keyboardHidden|orientation|screenSize"> 
            <intent-filter>
		        <action android:name="android.intent.action.SEARCH" />
		    </intent-filter>
 
    		<meta-data
        		android:name="android.app.searchable"
       			android:resource="@xml/searchable" />            
        </activity>
        <activity
            android:name=".grid.ContactDataGridView"
            android:label="Contact Data Grid View"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="SettingsActivity"
            android:label="Settings" >
        </activity>
        <activity
            android:name=".ContactEditActivity"
            android:label="Edit contact details"
            android:screenOrientation="portrait" 
            android:configChanges="keyboardHidden|orientation">
        </activity>
        <activity
  			android:name="NotificationReceiver"
            android:label="Notification Receiver" >
        </activity>
		<activity
            android:name=".dialog.ActivityDialogRing"
            android:label="Activity Dialog Ring" 
            android:theme="@android:style/Theme.Dialog">
        </activity>
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
        <meta-data
            android:name="com.google.android.maps.v2.API_KEY"
            android:value="AIzaSyC2YburJfQ9h12eLEn7Ar1XPK_2deytF30" />
        
    </application>

</manifest>
